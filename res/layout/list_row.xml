<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools" android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="8dp" tools:context=".activities.LobbyActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/spielername"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:textColor="#FFFFFF"
        android:layout_marginRight="50dp"
        android:text="Ray the Dummy :D" />

    <LinearLayout
        android:id="@+id/win_lose"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:layout_marginTop="16dp"
        android:layout_alignParentEnd="false"
        android:gravity="right">

        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/win"
            android:layout_height="16dp"
            android:layout_width="50dp"
            android:background="#6600ff00"
            android:padding="4dp">

            </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/lose"
            android:layout_height="16dp"
            android:layout_width="50dp"
            android:background="#66FF0000"
            android:padding="4dp">

            </LinearLayout>

        </LinearLayout>

</LinearLayout>